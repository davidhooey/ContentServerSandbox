<% @page_title = "Delete Instance" %>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="instance delete">
    <h2>Delete Instance</h2>
    
    <%= form_for(:instance, :url => {:action => 'destroy', :id => @instance.id}) do |f| %>
        <p>Are you sure you want to permanently delete this instance?</p>
        <p class="reference-name"><%= @instance.service_name %></p>
        <div class="form-buttons">
            <%= submit_tag("Delete Instance") %>
        </div>
    <% end %>
</div>
